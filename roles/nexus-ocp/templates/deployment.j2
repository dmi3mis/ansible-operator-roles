apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ nexus_ocp_name }}"
  namespace: "{{ nexus_ocp_namespace }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: "{{ nexus_ocp_name }}"
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: "{{ nexus_ocp_name }}"
    spec:
      serviceAccountName: "{{ nexus_ocp_name }}"
      containers:
      - name: nexus
        image: "{{ nexus_ocp_image }}:{{ nexus_ocp_image_tag }}"
        imagePullPolicy: Always
        ports:
        - containerPort: 8081
          protocol: TCP
        - containerPort: 5000
          protocol: TCP
        readinessProbe:
          httpGet:
            path: /
            port: 8081
            scheme: HTTP
          initialDelaySeconds: 60
          timeoutSeconds: 3
          periodSeconds: 20
          successThreshold: 1
          failureThreshold: 3
        resources:
          requests:
            cpu: "{{ nexus_ocp_cpu_request }}"
            memory: "{{ nexus_ocp_memory_request}}"
          limits:
            cpu: "{{ nexus_ocp_cpu_limit}}"
            memory: "{{ nexus_ocp_memory_limit }}"
        volumeMounts:
        - name: nexus-data
          mountPath: /nexus-data
      volumes:
      - name: nexus-data
        persistentVolumeClaim:
          claimName: "{{ nexus_ocp_name }}-pvc"
